<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>adminDashboard-bookings</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/dash.css">

    <style>
        /* Sidebar Styling */
        body::-webkit-scrollbar {
            display: none;

        }

        .content::-webkit-scrollbar {
            display: none;

        }

        .content {
            -ms-overflow-style: none;

            scrollbar-width: none;

        }


        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 290px;
            background-color: #343a40;
            padding: 20px;
            color: #fff;
            height: 100vh;
            overflow-y: auto;
            /* Allows the sidebar to be scrollable */
        }

        .sidebar a {
            display: block;
            padding: 10px;
            color: #fff;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
            text-decoration: none;
        }



        /* Main content styling */
        .content {
            margin-left: 250px;
            padding: 20px;
            overflow-y: auto;
            height: 100vh;
        }

        .card {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 sidebar">
                <h2>Admin Dashboard</h2>
                <a href="/admin/adminDashboard">My Profile</a>
                <a href="#bookings">Bookings</a>
                <a href="#" class="active">My Posts</a>
                <a href="#" class="active">Booked Event</a>
                <a href="/admin/adminUsers" class="active">Users</a>
                <a href="#" class="active">Events</a>
                <a href="/admin/adminhome">Home</a>
            </nav>

            <!-- Main content area -->
            <main class="content col-md-9">
                <h2>Welcome!</h2>

                <div class="row">
                    <% events.forEach(post=> { %>
                        <div class="col-4">
                            <div class="card" style="width: 18rem;">
                                <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= post.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= post.description %>
                                    </p>
                                    <p class="card-text">
                                        <%= post.place %>
                                    </p>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a href="/editposts/<%= post._id %>" class="btn btn-success">Edit</a>
                                        <form action="/delete-post/<%= post._id %>" method="POST"
                                            style="display:inline;">
                                            <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>